{
  "manifest_version": 3,
  "name": "Gem LinkedIn Shortcuts",
  "version": "0.1.0",
  "description": "Run Gem actions from LinkedIn profiles with configurable keyboard shortcuts.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.gem.com/*",
    "https://app.gem.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://localhost/*",
    "https://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Gem LinkedIn Shortcuts",
    "default_popup": "src/popup.html"
  },
  "options_page": "src/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "src/shared.js",
        "src/content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.gem.com/*",
        "https://app.gem.com/*"
      ],
      "js": [
        "src/shared.js",
        "src/gem_content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
